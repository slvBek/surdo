<p style="color: green"><%= notice %></p>
<div class="container">

  <h1>Posts</h1>

  <% @posts.each do |post| %>
    <div class="card" style="display: flex; margin-bottom: 20px; padding: 20px; border: 1px solid #ddd;">
      <div class="card-body" style="flex: 1;">
        <p><%= post.created_at.strftime("%d.%m.%Y, %H:%M") %></p>
        <h2><%= post.title %></h2>
        <p><%= pluralize(post.views, "view") %> Â· <%= pluralize(post.likes, "like") %></p>
        <div>
          <%= link_to 'Show this post', post %>
        </div>
      </div>
      <div class="card-image" style="margin-left: 20px;">
        <%= image_tag(post.image, style: "width: 150px; height: auto;") if post.image.attached? %>
      </div>
    </div>
  <% end %>

  <%= link_to 'New Post', new_post_path %>
</div>
